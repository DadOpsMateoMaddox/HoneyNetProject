# .envrc - CerberusMesh Dev Bootstrap

# Load Python virtualenv if it exists
if [ -d .venv ]; then
  layout python .venv
fi

# AWS Creds (optional - use with caution)
# export AWS_ACCESS_KEY_ID=your_key
# export AWS_SECRET_ACCESS_KEY=your_secret
# export AWS_DEFAULT_REGION=us-west-2

# GPT/OpenAI keys
# export OPENAI_API_KEY=your_openai_key

# Project metadata
export PROJECT_NAME="CerberusMesh"
export ENV="dev"

# Optional: autoload helper scripts
# source ./scripts/dev-helpers.sh

